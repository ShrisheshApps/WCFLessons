<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  <system.serviceModel>
    <services>
      <service name="ServiceLibrary.CalculatorService" behaviorConfiguration="httpBehv">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8001/"/>
            <add baseAddress="net.tcp://localhost:8002/"/>
          </baseAddresses>
        </host>
        <endpoint address="Mex" binding="mexHttpBinding" contract="IMetadataExchange" />
        <endpoint address="Mex" binding="mexTcpBinding" contract="IMetadataExchange" />
        <endpoint address="" binding="basicHttpBinding" contract="ServiceLibrary.ICalculate" />
        <endpoint address="" binding="netTcpBinding" contract="ServiceLibrary.ICalculate" />
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="httpBehv">
          <!--No attribute is set for the serviceMetadata but it works as it uses defaults-->
          <serviceMetadata/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>